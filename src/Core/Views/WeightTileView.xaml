<UserControl x:Class="Rogue.Core.UI.Views.WeightTileView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:Infrastructure="clr-namespace:Rogue.Core.UI.Infrastructure" mc:Ignorable="d" 
			 
			 d:DesignHeight="150" d:DesignWidth="150">
	<Grid Infrastructure:DesignTime.Background="{StaticResource _tileBackgroundBrush}">
		<Grid.RowDefinitions>
			<RowDefinition Height="0.287*"/>
			<RowDefinition Height="0.713*"/>
			<RowDefinition Height="0.713*"/>
		</Grid.RowDefinitions>
		<TextBlock TextWrapping="Wrap" Text="weight" Style="{DynamicResource _tileLargeHeader}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
	</Grid>
</UserControl>
