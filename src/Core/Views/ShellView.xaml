<Window x:Class="Rogue.Core.UI.Views.ShellView"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
		xmlns:Behaviors="clr-namespace:Rogue.Core.UI.Behaviors" Title="Core" Height="800" Width="1000"
		TextOptions.TextFormattingMode="Display"
		TextOptions.TextRenderingMode="ClearType"
		TextOptions.TextHintingMode="Animated"
		MouseDoubleClick="ShellView_OnMouseDoubleClick">
	<Window.Resources>
		
	</Window.Resources>
	<Window.Background>
		<LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
			<GradientStop Color="#FF3BA2BC" Offset="1"/>
			<GradientStop Color="{DynamicResource _backgroundGradient}"/>
		</LinearGradientBrush>
	</Window.Background>
	<i:Interaction.Behaviors>
		<Behaviors:BorderlessWindowBehavior/>
	</i:Interaction.Behaviors>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="0.088*"/>
			<RowDefinition Height="0.912*"/>
		</Grid.RowDefinitions>
		<TextBlock 
			MouseDown="OnMouseDown"
			TextWrapping="Wrap" Text="Core" VerticalAlignment="Center" FontSize="48" FontWeight="Thin" TextAlignment="Center" Foreground="White"/>

		<ContentControl Content="{Binding MainContent}" Grid.Row="1" IsTabStop="False"/>
	</Grid>
</Window>
